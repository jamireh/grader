               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <CheckBox fx:id="chbHandin" disable="true" mnemonicParsing="false" onAction="#onHandinChecked" text="Handin">
