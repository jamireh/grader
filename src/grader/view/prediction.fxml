<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grader.controller.PredictionController">
    <children>
        <HBox alignment="CENTER" prefHeight="70.0" prefWidth="400.0">
            <children>
                <Pane prefWidth="150.0">
                    <children>
                        <Label alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" text="Student:" textAlignment="CENTER">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="pStudentName" alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="37.0" textAlignment="CENTER">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Pane prefWidth="150.0">
                    <children>
                        <Label alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" text="Assignment:" textAlignment="CENTER">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="pAssignment" alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="37.0" textAlignment="CENTER">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </HBox>
        <Separator prefWidth="200.0" />
        <Label text="Assignment Grade">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <HBox prefHeight="75.0" prefWidth="400.0">
            <children>
                <Pane prefWidth="150.0">
                    <children>
                        <Label layoutX="14.0" layoutY="5.0" text="Current:">
                            <font>
                                <Font size="14.0" />
                            </font></Label>
                        <Label fx:id="pAssignmentGrade" contentDisplay="CENTER" layoutX="14.0" layoutY="35.0" textAlignment="CENTER">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Pane prefWidth="150.0">
                    <children>
                        <Label layoutX="14.0" layoutY="5.0" text="Required:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="pRequired" layoutX="14.0" layoutY="35.0">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children></HBox>
        <Separator prefWidth="200.0" />
        <Label text="Total Grade">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <HBox prefHeight="75.0" prefWidth="400.0">
            <children>
                <Pane prefWidth="150.0">
                    <children>
                        <Label layoutX="14.0" layoutY="5.0" text="Current:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="pCurTotal" layoutX="14.0" layoutY="35.0">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Pane prefWidth="150.0">
                    <children>
                        <Label layoutX="14.0" layoutY="5.0" text="Target:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="pTfNewTotal" layoutX="14.0" layoutY="31.0" prefHeight="27.0" prefWidth="50.0">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </TextField>
                    </children>
                </Pane>
            </children></HBox>
        <Separator prefWidth="200.0" />
        <Pane prefHeight="50.0" prefWidth="300.0">
            <children>
                <Button alignment="CENTER" layoutX="107.0" layoutY="7.0" mnemonicParsing="false" onAction="#updateRequiredScore" text="Predict" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</VBox>
